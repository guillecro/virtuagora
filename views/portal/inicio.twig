{% block scripts %}
<script>
    $(document).ready(function(){

    });
    $('#open-op1').click(function(e){
        e.preventDefault();
        $('.info-cont').hide();
        $('.info-cont.op1').slideDown();
    });
    $('#open-op2').click(function(e){
        e.preventDefault();
        $('.info-cont').hide();
        $('.info-cont.op2').slideDown();
    });
    $('#open-op3').click(function(e){
        e.preventDefault();
        $('.info-cont').hide();
        $('.info-cont.op3').slideDown();
    });
    $('#open-op4').click(function(e){
        e.preventDefault();
        $('.info-cont').hide();
        $('.info-cont.op4').slideDown();
    });
    $('#open-op5').click(function(e){
        e.preventDefault();
        $('.info-cont').hide();
        $('.info-cont.op5').slideDown();
    });

</script>
{% endblock %}
