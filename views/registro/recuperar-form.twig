{# VARIBLES #}
{% set footer = false %}
{% set barraNav = false %}
{% set notificaciones = false %}
{% set html_class = 'login-bg' %}
{% set body_class = 'no-body-bg' %}

{% extends "master.twig" %}

{# ----------------------------------------------------------- #}
{% block titulo %}Recuperar contraseña{% endblock %}
{# ----------------------------------------------------------- #}
{% block linkhead %}{% endblock %}
{# ----------------------------------------------------------- #}
{% block body %}

<div class="registro login row">
	<div class="medium-8 medium-centered columns no-padding-small-only">
		<div class="panel text-center panel-inicio">
			<div class="row">
				<div class="small-12 columns">
					<h1 class="seccion"><b>Reinicio de contraseña</b></h1>
					<hr>
				</div>
			</div>
			<div class="row">
				<div class="small-11 medium-10 large-8 small-centered columns">
					<form action="{{ urlFor('runLogin') }}" method="POST">
						<input name="password_nuevo" type="password" placeholder="Su nueva contraseña" required>
						<input name="password_confirmacion" type="password" placeholder="Confirme la nueva contraseña" required>
						<button class="button radius large expand"><i class="fa fa-sign-in fa-fw"></i>&nbsp;Reiniciar contraseña</button>
						<div style="margin-top: 15px;">
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


{% endblock %}
{# ----------------------------------------------------------- #}
{% block modals %}{% endblock %}
{# ----------------------------------------------------------- #}
{% block scripts %}
{% endblock %}
{# ----------------------------------------------------------- #}
